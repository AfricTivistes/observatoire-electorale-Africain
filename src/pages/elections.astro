---
import MainLayout from '../layouts/MainLayout.astro';
import ElectionCard from '../components/elections/ElectionCard';
import ElectionFilter from '../components/elections/ElectionFilter';
import { Icon } from 'astro-icon';

// Import election data
import electionData from '../data/elections.json';

const { upcomingElections } = electionData;
---

<MainLayout title="Élections à Venir" activePage="elections">
  <div class="container mx-auto px-4 py-6">
    <h1 class="text-2xl md:text-3xl font-bold text-center mb-8 text-africa-dark">Élections à Venir</h1>
    
    <div class="lg:grid lg:grid-cols-[320px,1fr] lg:gap-8">
      <!-- Filter Section -->
      <aside class="mb-8 lg:mb-0">
        <ElectionFilter client:load />
      </aside>

      <!-- Elections List -->
      <div class="max-w-2xl mx-auto lg:mx-0 space-y-4">
        {upcomingElections.map((election) => (
          <ElectionCard 
            election={election}
            client:visible
          />
        ))}
      </div>
    </div>
  </div>
</MainLayout>

<style>
  /* Add any custom styles here */
  :global(.container) {
    max-width: 1280px;
  }
</style>
